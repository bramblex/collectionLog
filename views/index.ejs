<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <script src="/collectionLog.js?appid=123123&app=myapp&url=%2Fcollect&classifyType=y" is-clog></script>
  <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.slim.min.js"></script>
  <style>
    .item {
      /* height: 100px; */
      margin-bottom: 20px;
      background-color: #f1f1f1;
      box-sizing: border-box;
      padding: 10px;
      border-radius: 10px;
      color: #000;
      text-shadow: 0 0 3px #fff;
    }

    .item.clog-click {
      border: 2px dashed #000;
    }

    .item.clog-visit {
      animation: mymove 2s infinite linear;
    }

    @keyframes mymove {
      0% {
        box-shadow: 0 0 20px 10px #0066ff;
      }

      50% {
        box-shadow: 0 0 20px 10px #ff6600;
      }

      100% {
        box-shadow: 0 0 20px 10px #0066ff;
      }
    }
  </style>
</head>

<body>
  <button id="addMore">add more</button>
  <div id="app"></div>
  <script>
    /**
     * 示例代码,可以忽略
     * 主要看页面上的div,他们都具有className = clog-xxx, 而且属性上也有clog相关参数
     * */
    let num = Math.round(Math.random() * 100)

    function randomColor() {
      let r = Math.round(Math.random() * 255).toString(16)
      let g = Math.round(Math.random() * 255).toString(16)
      let b = Math.round(Math.random() * 255).toString(16)
      r.length == 2 ? r : r = '0' + r.substr(0, 1)
      g.length == 2 ? g : g = '0' + g.substr(0, 1)
      b.length == 2 ? b : b = '0' + b.substr(0, 1)
      return r + g + b
    }

    function addItem(startNum = 0, count = 10) {
      let i = 0
      let bgColor = randomColor()
      while (i < count) {
        let randomStr = (Math.random() * (Math.random() * Date.now())).toFixed(2)
        let isClick = Boolean(Math.round(Math.random()))
        let isVisit = Boolean(Math.round(Math.random()))
        let hasRegion = Boolean(Math.round(Math.random()))
        let hasPos = Boolean(Math.round(Math.random()))
        let hasEx = Boolean(Math.round(Math.random()))
        let hasPage = Boolean(Math.round(Math.random()))
        let div = `<div style="background: #${bgColor};" 
                        id="item_${startNum + i}" 
                        class="item ${isClick ? 'clog-click' : ''} ${isVisit ? 'clog-visit' : ''}" 
                        clog 
                        ${hasRegion ? 'clog-region' : 'empty'}="region${startNum + i}" 
                        ${hasPos ? 'clog-pos' : 'empty'}="pos${startNum + i}" 
                        ${hasEx ? 'clog-ex' : 'empty'}="ex${startNum + i}" 
                        ${hasPage ? 'clog-page' : 'empty'}="ex${startNum + i}">
                        ${startNum + i}/${i + 1}/${count}
                        <br>
                        ${randomStr}
                        <br>
                        isVisit: ${isVisit} | isClick: ${isClick}
                        <br>
                        id: item_${startNum + i}
                        <br>
                        reg: ${hasPage} | pos: ${hasPos} | ex: ${hasEx} | page: ${hasPage}
                  </div>`

        $('#app').append(div)
        i += 1
      }
      num = count + startNum
    }

    $('#addMore').click(() => {
      addItem(num, Math.round(Math.random() * 10))
    })

    $(() => {
      addItem(0, num)
    })
  </script>
</body>

</html>